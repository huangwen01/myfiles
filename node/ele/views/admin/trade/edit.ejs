                            <input type="hidden" name="oldimg" value="<%=list[0].img%>"/>
                            <label>address</label>
                            <input type="text" placeholder="address" class="input-xlarge" name="address" value="<%=list[0].address%>">
                            <label>phone</label>
                            <input type="text" placeholder="phone" class="input-xlarge" name="phone" value="<%=list[0].phone%>">
                            <label>old_price</label>
                            <input type="text" placeholder="old_price" class="input-xlarge" name="old_price" value="<%=list[0].old_price%>">
                            <label>price</label>
                            <input type="text" placeholder="price" class="input-xlarge" name="price" value="<%=list[0].price%>">
                            <label>status</label>
                            <%if(list[0].status==1){%>
                            上架:<input type="radio" class="input-xlarge" name="status" value="1" checked="checked">
                            下架:<input type="radio" class="input-xlarge" name="status" value="0">
                            <%}else{%>
                            上架:<input type="radio" class="input-xlarge" name="status" value="1" >
                            下架:<input type="radio" class="input-xlarge" name="status" value="0" checked="checked">
                            <%}%>

                            <label>edit_time</label>
                            <%var date=new Date()%>
                            <%date=date.toLocaleString();%>
                            <input type="text" value="<%=date%>" class="input-xlarge" name="addtime" >
                            <label></label>
                            <br/>
                            <button class="btn btn-primary" id="btn-save"><i class="icon-save"></i> 保存</button>

