                    <div class="tab-pane active in" id="home">
                        <form id="tab" action="<%=host%>admin/trade/doEdit" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="id" value="<%=list[0]._id%>"/>
                            <label>title</label>
                            <input type="text" placeholder="adminname" class="input-xlarge" name="title" value="<%=list[0].title%>">
                            <label>description</label>
                            <input type="text" placeholder="password" class="input-xlarge" name="description" value="<%=list[0].description%>">
                            <label>img</label>
                            <input type="image"   src="<%=list[0].img%>" /><br/>
                            <!--<img  alt="" width="100" height="100" name="oldimg"><br/>-->
