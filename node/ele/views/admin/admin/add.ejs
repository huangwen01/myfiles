<div class="content">

    <div class="header">

        <h1 class="page-title">Edit User</h1>
    </div>

    <ul class="breadcrumb">
        <li><a href="<%host%>">Home</a> <span class="divider">/</span></li>
        <li><a href="<%host%>admin">Admin</a> <span class="divider">/</span></li>
        <li class="active">Admin-add</li>
    </ul>

    <div class="container-fluid">
        <div class="row-fluid">

            <!--<div class="btn-toolbar">-->
                <!--<button class="btn btn-primary"><i class="icon-save"></i> 保存-->
                    <!--&lt;!&ndash;<a href="<%=host%>/admin/user"></a>&ndash;&gt;-->
